<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graey"
    tools:context=".AboutActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/potoku"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/namaku"
        android:src="@drawable/potoku" />

    <TextView
        android:id="@+id/namaku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/namaku"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/bg_about_name"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/emailku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_about_email"
        android:padding="8dp"
        android:text="@string/emailku"
        android:textColor="@color/rodok_black"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/namaku"
        app:layout_constraintStart_toStartOf="@+id/namaku"
        app:layout_constraintTop_toBottomOf="@id/namaku" />


</androidx.constraintlayout.widget.ConstraintLayout>